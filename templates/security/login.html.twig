{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{% block nav %}{% endblock %}
	<main class="body-login text-white home py-2 fw-bold">
		<nav class="navbar-login d-flex bg-light justify-content-center mt-3 align-items-center">
			<img src="{{ asset('build/images/arom.png') }}" alt="">
		</nav>

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
       <div class="container  mt-5">
		<div class="container mt-5  text-white p-5 bk-register ">
			<h1 class=" taille title-register text-white fs-1 t-5 text-center fw-bold text-secondary">Se connecter</h1>
			<div class="bk-form  py-4 d-flex flex-column justify-content-around align-items-center">
				{% if error %}
					<p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
				{% endif %}
				<form action="{{ path('app_login') }}" method="post" class="w-100">
					<div class="form-group py-2 w-50 text-white m-auto d-flex flex-column gap-3">

						<label for="username">Email</label>
						<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>

						<label for="password" class="mt-3">Mot de passe</label>
						<input type="password" id="password" name="_password" class="form-control" required>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<input type="hidden" name="_target_path" value="/">
                        <div>
						<button class="btn btn-secondary fw-bold d-flex text-white justify-content-center mt-3 mx-auto" type="submit">
							Se connecter
						</button>
						<a type="button" href='/register' class="btn btn-secondary fw-bold d-flex text-white justify-content-center mt-3 mx-auto">
							S'inscrire
						</a>
                    </div>
					</div></div>
				</div>
			</form>
            
		</div>
	</main>
{% endblock %}
