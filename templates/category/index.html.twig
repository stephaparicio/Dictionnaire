{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block stylesheets %}
{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}

<main>
    <div>
        <div class="c1">
            <h1 class="text-center  fs-1 text-white">Plantes</h1>
        
           
        </div>
    </div>
    <h2 class="p-4 fs-1 text-center ">Categories des plantes</h2>

    <!-- Columns start at 50% wide on mobile and bump up to 33.3% wide on desktop -->
    <div class="container-fluid rounded-5 row p-5 row-cols-1 row-cols-md-3 g-4">
        {% for category in categories %}
        <div class="col">
            <div class="card  my-4 " style="height:18rem; background-image:url('{{ vich_uploader_asset(category) }}')">
                <div class="card-body">
                    <h5 class="text-center card-title text-white">{{ category.name }}</h5>
                </div>
            </div>
        </div>
        {% else %}
        Aucune categorie trouv√©e.
        {% endfor %}
    </div>
</main>


{% endblock %}